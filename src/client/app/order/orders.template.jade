#admin-menu(data-ng-include="'app/admin/users/menu/user.menu.html'")
div(data-ng-controller="Orders as orders")
  #orders-menu(data-ng-include="'app/order/menu/order.menu.html'")
  .filter-title
    span.publisher-name.
      Mis Ordenes
  .shelf
    .inner-shelf
      .spinner(data-ng-include="'app/layout/loading/loading.template.html'", data-ng-show="loading")
      .shelf-space(data-ng-hide="loading")
        .shelf-content(data-ng-hide="loading")
          .shelf-message(ng-if="orders.list.length < 1")
            .subtitle
              |No existen ordenes registradas.
          .list-item(ng-repeat="item in orders.list", data-ui-sref="dashboard.order({objectId : item.objectId})")
            .pure-g
              .pure-u-1.pure-u-md-1-5
                .pure-g
                  .pure-u-1-2.pure-u-sm-1-4.pure-u-md-1
                    | Referencia
                  .pure-u-1-2.pure-u-sm-1-4.pure-u-md-1.info-value
                    | {{item.referenceId}}
              .pure-u-1.pure-u-md-1-5
                .pure-g
                  .pure-u-1-2.pure-u-sm-1-4.pure-u-md-1
                    | Fecha
                  .pure-u-1-2.pure-u-sm-1-4.pure-u-md-1.info-value
                    | {{item.createdAt | date: 'mediumDate'}}
              .pure-u-1.pure-u-md-1-5
                .pure-g
                  .pure-u-1-2.pure-u-sm-1-4.pure-u-md-1
                    | Monto
                  .pure-u-1-2.pure-u-sm-1-4.pure-u-md-1.info-value
                    | {{item.amount}}
              .pure-u-1.pure-u-md-1-5
                .pure-g
                  .pure-u-1-2.pure-u-sm-1-4.pure-u-md-1
                    | Estado
                  .pure-u-1-2.pure-u-sm-1-4.pure-u-md-1.info-value
                    | {{item.status}}
              .pure-u-1.pure-u-md-1-5
                .pure-g
                  .pure-u-1-2.pure-u-sm-1-4.pure-u-md-1
                    | Tipo
                  .pure-u-1-2.pure-u-sm-1-4.pure-u-md-1.info-value
                    | {{item.type}}
        