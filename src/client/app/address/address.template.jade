div(data-ng-controller="Address as address")
  #account-menu(data-ng-include="'app/account/menu/account.menu.html'")
  .filter-title
    span.publisher-name.
      Mis Direcciones
  .shelf
    .inner-shelf
      .shelf-space
        .spinner(data-ng-include="'app/layout/loading/loading.template.html'", data-ng-show="loading")
        #address-list(data-ng-hide="loading")  
          .shelf-message(ng-if="address.addresses.length < 1")
            .subtitle
              |No existen direcciones registradas.
          .address-item(ng-repeat="address in address.addresses")
            .address-line
              | {{address.street}} {{address.number}} {{address.apt}}
            .address-line
              | Colonia {{address.district}}, {{address.municipality}} 
            .address-line
              | {{address.country}}, {{address.state}}, {{address.zip}} 
            .address-line
              a.pure-button.pure-button-primary.button-small
                i.fa.fa-edit
                |Editar
              a.pure-button(data-ng-click="showModal()", data-question='¿Eliminar dirección?', data-confirm="deleteAddress(address.objectId, $index)", confirm-message)
                i.fa.fa-trash 
                |Borrar
          .buttons-container
            a(ng-click="address.addressFormView = true")
              i.fa.fa-plus-circle.fa-4x
            div
              |Agregar Dirección

  div(ng-show="address.addressFormView")
    .filter-title
      span.publisher-name.
        Agregar Dirección
    .shelf
      .inner-shelf
        .shelf-space
          #new-address(new-address)








