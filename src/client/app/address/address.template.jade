#account-menu(data-ng-include="'app/account/menu/account.menu.html'")
.filter-title
  span.publisher-name.
    Mis Direcciones
.shelf
  .inner-shelf
    .shelf-space
      .shelf-message(ng-if="addresses.length < 1")
        .subtitle
          |No existen direcciones registradas.
      .address-item(ng-repeat="address in addresses")
        .address-line
          | {{address.street}} {{address.number}} {{address.apt}}
        .address-line
          | Colonia {{address.district}}, {{address.municipality}} 
        .address-line
          | {{address.country}}, {{address.state}}, {{address.zip}} 
        .address-line
          a.pure-button.pure-button-primary.button-small
            i.fa.fa-edit
            |Editar
          a.pure-button.button-small(ng-click="deleteAddress(address.objectId, $index)")
            i.fa.fa-trash 
            |Borrar
    .buttons-container
      a(ng-click="addressFormView = true")
        i.fa.fa-plus-circle.fa-4x
      div
        |Agregar Dirección

div(ng-show="addressFormView")
  .filter-title
    span.publisher-name.
      Agregar Dirección
  .shelf
    .inner-shelf
      .shelf-space
        #new-address(new-address)








