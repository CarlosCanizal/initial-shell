div(data-ng-controller="Checkout as checkout")
  .section-title
    | Carrito de Compras
  #user-forms(login-forms, data-ng-if="!shell.currentUser", data-ng-show="checkout.loginFormsView")
  #items-checkout(items-list, data-ng-if="!checkout.completed")
  #wallet-checkout(wallet, data-ng-if="checkout.walletView")
  #membership-checkout(membership, data-ng-if="shell.currentUser && (shell.system.membership && !shell.isMember())", data-ng-hide="checkout.upgrade")
  #upgrade-checkout(upgrade-membership, data-ng-if="shell.currentUser && checkout.upgrade")
  #address-checkout(shipping-address, data-ng-if="shell.currentUser && checkout.loadAddress")
  #payment-checkout(payment-method, data-ng-if="shell.currentUser && checkout.loadPayment")
  #placeOrder-checkout(place-order, data-ng-if="shell.currentUser")
  #response-checkout(response-payment, data-ng-if="shell.currentUser")

      
        


        

          
        


        
