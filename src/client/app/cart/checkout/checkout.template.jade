.filter-title
  span.publisher-name.
    Checkout
.shelf
  .inner-shelf
    .shelf-space
      #cart-list
        .pure-g
          .pure-u-1.pure-u-sm-2-3
            .cart-item.pure-g(ng-repeat="item in cart")
              .pure-u-1.pure-u-sm-1-4.pure-u-md-1-8
                img(alt="", data-ng-src="{{item.cover.url}}")
              .pure-u-1.pure-u-md-1-2
                .item-space
                  div
                    | {{item.name}}
                  div
                    | Precio: ${{item.price}} USD
                  div
                    span
                      i.fa.fa-minus-circle
                    input.xs-input(type="text", ng-model="item.quantity")
                    span
                      i.fa.fa-plus-circle
                  div
                    a.pure-button.button-xsmall(data-ng-click="removeFromCart(item)")
                      i.fa.fa-trash
                      | Eliminar
          .pure-u-1.pure-u-sm-1-3
            h1
              |$ {{vm.cartItems.cartTotal}} USD
          
        


        
