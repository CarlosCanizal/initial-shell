#wallet
  .filter-title
    span.publisher-name(data-ng-bind="shell.labels.wallet")
  .shelf
    .inner-shelf
      .spinner(data-ng-include="'app/layout/loading/loading.template.html'", data-ng-show="loading")
      .shelf-space(data-ng-hide="loading")
        .shelf-content(data-ng-hide="loading")
          .pure-g(data-ng-if="shell.currentUser")
            .pure-u-1.pure-u-md-1-3.border-right
              .information-box.padding-right-1
                span(data-ng-bind="shell.labels.walletText2")
                coupon
            .pure-u-1.pure-u-md-1-3.border-right.align-center.action
              .information-box.padding-right-1
                .subtitle(data-ng-bind="shell.labels.balanceAvailable+': '")
                .subtitle.margin-bottom
                  | ${{shell.currentUser.wallet - shell.shoppingCart.wallet }}
                .align-center
                  a.pure-button.pure-button-primary.button-small(data-ng-click="useWallet()", data-ng-hide="payWithWallet", data-ng-bind="shell.labels.useMyBalance")
                  a.pure-button.pure-button-primary.button-small(data-ng-click="doNotUseWallet()", data-ng-show="payWithWallet", data-ng-bind="shell.labels.noUseMyBalance")
            .pure-u-1.pure-u-md-1-3.align-center
              .padding-right-1
                div(data-ng-include="'app/cart/checkout/totals/totals.template.html'")
                a.pure-button(data-ng-click="checkout.hideWalletView()", data-ng-bind="shell.labels.closeWallet")
          div.align-center(data-ng-if="!shell.currentUser", data-ng-bind="shell.labels.loginToUseWallet")            
            a.pure-button.pure-button-primary.button-small(data-ng-if="!shell.currentUser", data-ng-click="checkout.showLoginForms(true)")
              i.fa.fa-user
              span(data-ng-bind="shell.labels.login")