.pure-u-1.pure-u-sm-1-3.pure-u-md-1-5
  img(alt="", data-ng-src="{{item.coverUrl}}")
.pure-u-1.pure-u-sm-1-3.pure-u-md-1-2
  .item-space
    .description
      div.uppercase
        | {{item.name}}
      div(data-ng-if="item.available == 'serie'", data-ng-bind="shell.labels.subscription")
      div(data-ng-if="item.available == 'preorder'",data-ng-bind="shell.labels.preorder")
      div(data-ng-if="item.available == 'available'",data-ng-bind="shell.labels.availableNow")
      div
        span(data-ng-bind="shell.labels.price+': '")
        span
          |{{item.price | currency}}
        span(data-ng-bind="shell.labels.currencySymbol")
      div.quantity
        a.pure-button.button-small.just-icon(data-ng-click="minusOne(item)")
          i.fa.fa-minus-circle
        span(data-ng-class="{update:update}")
          | {{item.quantity}}
        a.pure-button.button-small.just-icon(data-ng-click="plusOne(item)")
          i.fa.fa-plus-circle
      div.error(data-ng-if="item.available == 'available' && item.quantity >= item.stock")
        span(data-ng-bind="shell.labels.only+' '")
        span
          |{{item.stock}} 
        span(data-ng-bind="shell.labels.availables")
.pure-u-1.pure-u-sm-1-3.pure-u-md-1-4
  .item-space
    .subtitle(data-ng-bind="shell.labels.total+': '")
    .subtitle(data-ng-class="{update:update}")
      span
        |{{(item.price*item.quantity) | currency}} 
      span(data-ng-bind="shell.labels.currencySymbol")
    div.margin-bottom
      a.pure-button.button-xsmall(data-ng-click="checkout.removeFromCart($index)")
        i.fa.fa-trash
        span(data-ng-bind="shell.labels.removeFromCart")