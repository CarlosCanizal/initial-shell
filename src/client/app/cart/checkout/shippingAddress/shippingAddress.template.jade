#new-address(data-ng-if="addressFormView")
  .filter-title
    span.publisher-name.
      Agregar Direcci√≥n
  .shelf
    .inner-shelf
      .spinner(data-ng-include="'app/layout/loading/loading.template.html'", data-ng-show="loading")
      .shelf-space(data-ng-hide="loading")
        .shelf-content(data-ng-hide="loading")
          div(new-address)

#address(data-ng-show="showAddress && !addressFormView")
  .filter-title
    span.publisher-name.
      Entrega
  .shelf
    .disable-shelf(data-ng-show="showPayment")
      i.fa.fa-check-square-o.fa-5.success
    .inner-shelf
      .spinner(data-ng-include="'app/layout/loading/loading.template.html'", data-ng-show="loading")
      .shelf-space(data-ng-hide="loading")
        .shelf-content(data-ng-hide="loading")
          .pure-g
            .pure-u-1.pure-u-md-1-3.border-right
              .information-box.no-padding
                .shelf-message(ng-if="addresses.length < 1")
                  .subtitle
                    |No existen direcciones registradas.
                .description(data-ng-show="addresses.length > 0")
                  | {{shoppingCart.shippingAddress.street}} {{shoppingCart.shippingAddress.number}} {{shoppingCart.shippingAddress.apt}}
                  br
                  | Colonia {{shoppingCart.shippingAddress.district}}, {{shoppingCart.shippingAddress.municipality}} 
                  br
                  | {{shoppingCart.shippingAddress.country}}, {{shoppingCart.shippingAddress.state}}, {{shoppingCart.shippingAddress.zip}} 
            .pure-u-1.pure-u-md-1-3.border-right
              .information-box
                div(data-ng-show="addresses.length > 0")
                  .address-line
                    | Cambiar direccion
                  .address-line
                    select(ng-model="shoppingCart.shippingAddress", ng-options="item as item.street for item in addresses")
                .address-line
                  a.pure-button.button-xsmall(data-ng-click="addressFormView=true")
                    i.fa.fa-plus
                    | Agregar Direccion
            .pure-u-1.pure-u-md-1-3.align-center
              div(data-ng-hide="showPayment")
                .address-line
                  a.pure-button.button-success(data-ng-click="toPaymentMethod()", data-ng-class="{'pure-button-disabled': !shoppingCart.shippingAddress}")
                    i.fa.fa-check
                    | Continuar
                .address-line.no-padding
                  a.pure-button(data-ng-click="goToCart()", data-ng-hide="showConfirmation")
                    i.fa.fa-shopping-cart
                    | Ir al carrito