#new-address(data-ng-if="checkout.addressFormView")
  .filter-title
    span.publisher-name.
      Agregar Dirección
  .shelf
    .inner-shelf
      .spinner(data-ng-include="'app/layout/loading/loading.template.html'", data-ng-show="loading")
      .shelf-space(data-ng-hide="loading")
        .shelf-content
          div(new-address)

#address(data-ng-show="checkout.showAddress && !checkout.addressFormView")
  .filter-title
    span.publisher-name.
      Entrega
  .shelf
    .disable-shelf(data-ng-show="checkout.showPayment")
      i.fa.fa-check-square-o.fa-5.success
    .inner-shelf
      .spinner(data-ng-include="'app/layout/loading/loading.template.html'", data-ng-show="loading")
      .shelf-space(data-ng-hide="loading")
        .shelf-content(data-ng-hide="loading")
          .pure-g
            .pure-u-1.pure-u-md-1-3.border-right
              .information-box
                .shelf-message(ng-if="checkout.addresses.length < 1")
                  .subtitle
                    |No existen direcciones registradas.
                .description(data-ng-show="checkout.addresses.length > 0")
                  | {{shell.shoppingCart.shippingAddress.street}} {{shell.shoppingCart.shippingAddress.number}} {{shell.shoppingCart.shippingAddress.apt}}
                  br
                  | Colonia {{shell.shoppingCart.shippingAddress.district}}, {{shell.shoppingCart.shippingAddress.municipality}} 
                  br
                  | {{shell.shoppingCart.shippingAddress.country}}, {{shell.shoppingCart.shippingAddress.state}}, {{shell.shoppingCart.shippingAddress.zip}} 
            .pure-u-1.pure-u-md-1-3.border-right
              .information-box.padding-side-1
                div(data-ng-show="checkout.addresses.length > 0")
                  .address-line
                    | Seleccionar metodo de envio11
                  .address-line
                    select(data-ng-model="shell.shoppingCart.shippingMethod", data-ng-options="item.name for item in checkout.shippingMethods track by item.objectId", data-ng-change="checkout.updateShipping()")                      
              .information-box.padding-side-1
                div(data-ng-show="checkout.addresses.length > 0")
                  .address-line
                    | Cambiar direccion
                  .address-line
                    select(data-ng-model="shell.shoppingCart.shippingAddress", data-ng-options="item.street for item in checkout.addresses track by item.objectId")
                .address-line
                  a.pure-button.button-xsmall(data-ng-click="checkout.addressFormView=true")
                    i.fa.fa-plus
                    | Agregar Direccion
            .pure-u-1.pure-u-md-1-3.align-center
              div.padding-side-1(data-ng-hide="showPayment")
                .shipping-method
                  | {{shell.shoppingCart.shippingMethod.name}} - {{shell.shoppingCart.shippingMethod.price | currency}}
                .address-line
                  a.pure-button.button-success(data-ng-click="checkout.toPaymentMethod()", data-ng-class="{'pure-button-disabled': !shell.shoppingCart.shippingAddress}")
                    i.fa.fa-check
                    | Continuar
                .address-line
                  a.pure-button(data-ng-click="showModal()", data-question='¿Ir al carrito?', data-confirm="checkout.goToCart()", data-ng-hide="checkout.showConfirmation", confirm-message)
                    i.fa.fa-shopping-cart
                    | Ir al carrito