#placeOrder(data-ng-show="showPlaceOrder")
  .filter-title
    span.publisher-name.
     Confirmar Orden
  .shelf
    .disable-shelf(data-ng-show="showConfirmation")
      i.fa.fa-check-square-o.fa-5.success
    .inner-shelf
      .spinner(data-ng-include="'app/layout/loading/loading.template.html'", data-ng-show="loading")
      .shelf-space
        .shelf-content(data-ng-hide="loading")
          .pure-g
            .pure-u-1.pure-u-md-1-3.border-right
              .information-box.no-padding
                .subtitle
                  | Envio:
                address.margin-bottom
                  | {{shoppingCart.shippingAddress.street}} {{shoppingCart.shippingAddress.number}} {{shoppingCart.shippingAddress.apt}}
                  br
                  | Colonia {{shoppingCart.shippingAddress.district}}, {{shoppingCart.shippingAddress.municipality}} 
                  br
                  | {{shoppingCart.shippingAddress.country}}, {{shoppingCart.shippingAddress.state}}, {{shoppingCart.shippingAddress.zip}} 
                .address-line
                  a.pure-button.button-xsmall(data-ng-click="toAddress()")
                    | Modificar

            .pure-u-1.pure-u-md-1-3.border-right
              .information-box
                .subtitle
                  | Metodo de pago:
                .address-line
                  | {{shoppingCart.paymentMethod.card.name}}
                .address-line
                  i.fa.fa-cc-visa(ng-if="shoppingCart.paymentMethod.card.brand == 'VISA'")
                  i.fa.fa-cc-mastercard(ng-if="shoppingCart.paymentMethod.card.brand == 'MC'")
                  i.fa.fa-cc-amex(ng-if="shoppingCart.paymentMethod.card.brand == 'AMERICAN_EXPRESS'")
                  | **** **** **** {{shoppingCart.paymentMethod.card.last4}}
                .address-line
                  a.pure-button.button-xsmall(data-ng-click="toPaymentMethod()")
                    | Modificar
            .pure-u-1.pure-u-sm-1-3
              .information-box.no-border.no-margin.no-padding.align-center
                .subtitle
                  |Total de la orden
                .title
                  |$ {{vm.cartItems.cartTotal}} USD
                .address-line
                  a.pure-button.button-success.margin-bottom(data-ng-click="placeOrder()", data-ng-hide="showConfirmation")
                    i.fa.fa-money
                    | Pagar
                .address-line.no-padding
                  a.pure-button(data-ng-click="goToCart()", data-ng-hide="showConfirmation")
                    i.fa.fa-shopping-cart
                    | Volver al carrito
#orderStatus(data-ng-show="showConfirmation || completed")
  .filter-title
    span.publisher-name.
     Confirmación
  .shelf
    .inner-shelf
      .spinner(data-ng-include="'app/layout/loading/loading.template.html'", data-ng-show="waitingForResponse")
      .shelf-space
        .shelf-content(data-ng-hide="waitingForResponse")
          .success-container(data-ng-if="completed")
            i.fa.fa-check-circle.fa-8
            h2
              | ¡Gracias por tu compra!
          .error-container(data-ng-if="!completed")
            i.fa.fa-credit-card.fa-8
            h2
              | {{errorMessage}}
  div(data-ng-include="'app/order/order.template.html'", data-ng-if="completed")