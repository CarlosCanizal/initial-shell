.search-params
  .pure-g
    .search-list.pure-u-1.pure-u-sm-1-3
      .search-param.align-center.pointer(data-ng-mouseenter="shell.premierList = true")
        |PREMIER
        i.fa.fa-sort-down
      .box-list(data-ng-show="shell.premierList", data-ng-mouseleave="shell.premierList= false")
        .list-element.uppercase.pointer(data-ng-click="shell.loadShelf('dc comics')")
          |DC COMICS
        .list-element.pointer(data-ng-click="shell.loadShelf('marvel comics')")
          |MARVEL COMICS
        .list-element.pointer(data-ng-click="shell.loadShelf('dark horse')")
          |DARK HORSE
        .list-element.pointer(data-ng-click="shell.loadShelf('idw publishing')")
          |IDW PUBLISHING
        .list-element.pointer(data-ng-click="shell.loadShelf('image comics')")
          |IMAGE COMICS
    .search-box.pure-u-1.pure-u-sm-1-3
      input(type="text", ng-model="shell.searchValue", placeholder="BUSCAR")
      a(ng-click="shell.searchByName()")
        i.fa.fa-search
    .search-list.pure-u-1.pure-u-sm-1-3
      .search-param.align-center.pointer(data-ng-mouseenter="shell.publishersList = true")
        |EDITORIALES
        i.fa.fa-sort-down
      .box-list(data-ng-show="shell.publishersList", data-ng-mouseleave="shell.publishersList= false")
        .list-element.uppercase.pointer(data-ng-repeat="publisher in shell.publishers",data-ng-click="shell.loadShelf(publisher.name)")
          |{{publisher.name}}
