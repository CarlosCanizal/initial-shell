#series-menu(data-ng-include="'app/serie/menu/serie.menu.html'")
.filter-title
  span.publisher-name
    | {{serie.name}}
.shelf
  .inner-shelf
    .spinner(data-ng-include="'app/layout/loading/loading.template.html'", data-ng-show="loading")
    .shelf-content(data-ng-hide="loading")
      .pure-g
        .pure-u-1.pure-u-md-1-3
          .item
            .item-image
              img(alt="", ng-src="{{serie.cover.url}}")
        .pure-u-1.pure-u-md-2-3
          .item
            .title.uppercase
              | {{serie.name}}
            .row(data-ng-if="subscription.status == 'active'")
              .row.subtitle.success
                | Suscripción Activa
              a.pure-button.button-warning
                | Pausar Suscripción
            .row(data-ng-if="subscription.status == 'paused'")              
              .row.subtitle.warning
                | Suscripción Pausada
              a.pure-button.button-success
                |Activar Suscripción
            .row
              a.pure-button.button-error
                |Cancelar Suscripción



          