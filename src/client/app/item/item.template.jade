#back-menu(data-ng-include="'app/item/menu/item.menu.html'")
.filter-title
  span.publisher-name(data-ng-bind="shell.labels.information")
.shelf
  .inner-shelf
    .shelf-space
      .pure-g.item-details
        .pure-u-1.pure-u-sm-1-3.pure-u-md-1-4
          img(data-ng-src="{{item.info.coverUrl}}")
        .pure-u-1.pure-u-sm-2-3.pure-u-md-3-4
          .padding-side-1
            .item-name
              |{{item.info.name}}
            .item-description(data-ng-bind-html="item.info.description")
            .item-attribute
              span.text-secondary-black.margin-right-1(data-ng-bind="shell.labels.publisher")
              span.uppercase
                |{{item.info.publisher}}
            .item-attribute
              span.text-secondary-black.margin-right-1(data-ng-bind="shell.labels.price")
              span.accent
                |{{item.info.price | currency}} 
              span.accent(data-ng-bind="shell.labels.currencySymbol")
            .item-attribute(data-ng-if="item.info.writer")
              span.text-secondary-black.margin-right-1(data-ng-bind="shell.labels.writer")
              span.uppercase
                |{{item.info.writer}}
            .item-attribute(data-ng-if="item.info.artist")
              span.text-secondary-black.margin-right-1(data-ng-bind="shell.labels.artist")
              span.uppercase
                |{{item.info.artist}}
            .item-attribute(data-ng-if="item.info.coverArtist")
              span.text-secondary-black.margin-right-1(data-ng-bind="shell.labels.coverArtist")
              span.uppercase
                |{{item.info.coverArtist}}
            div(data-ng-if="item.info.status=='active'")
              .item-attribute
                span.text-secondary-black.margin-right-1(data-ng-bind="shell.labels.availability")
                span.uppercase
                  |{{item.info.available}}
              .item-attribute(data-ng-if="item.info.release")
                span.text-secondary-black.margin-right-1(data-ng-bind="shell.labels.releaseDate")
                span.uppercase.accent
                  |{{item.info.release}}
              .item-attribute
                a.pure-button.button-small.just-icon(data-ng-click="item.minusOne()")
                  i.fa.fa-minus-circle
                span.margin-side-1(data-ng-class="{update:update}")
                  | {{item.quantity}}
                a.pure-button.button-small.just-icon(data-ng-click="item.plusOne()")
                  i.fa.fa-plus-circle
              .item-attribute.error(data-ng-if="item.info.available == 'available' && item.quantity >= item.info.stock")
                span(data-ng-bind="shell.labels.only")
                |  
                | {{item.info.stock}} 
                span(data-ng-bind="shell.labels.availables")
              .item-attribute
                a.pure-button.pure-button-primary(data-ng-click="shell.addToCart(item.info, item.quantity)")
                  span(data-ng-if="item.info.available =='serie'",data-ng-bind="shell.labels.subscribeMe")
                  span(data-ng-if="item.info.available =='preorder'",data-ng-bind="shell.labels.preorderIt")
                  span(data-ng-if="item.info.available =='available'",data-ng-bind="shell.labels.buyIt")
                a.pure-button.margin-left-1(data-ui-sref="home", data-ng-bind="shell.labels.back")
            div(data-ng-if="item.info.status !== 'active'")
              .item-attribute
                span.text-secondary-black.margin-right-1(data-ng-bind="shell.labels.availability")
                span.uppercase.error(data-ng-bind="shell.labels.noStock")

