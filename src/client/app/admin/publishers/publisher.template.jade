#admin-menu(data-ng-include="'app/admin/publishers/menu/publisher.menu.html'")
div(data-ng-show="publisher.form")
  .filter-title
    span.publisher-name.
      Edit Publisher
  .shelf
    .inner-shelf
      .shelf-space
        .spinner(data-ng-include="'app/layout/loading/loading.template.html'", data-ng-show="loading")
        publisher-form
.filter-title
  span.publisher-name.
    Publisher Info
.shelf
  .inner-shelf
    .shelf-space
      .spinner(data-ng-include="'app/layout/loading/loading.template.html'", data-ng-show="loading")
      #publisher
        table.info
          tbody
            tr
              td.info-label
                |Nombre:
              td.info-value
                |{{publisher.info.name}}
            tr
              td.info-label
                |Label:
              td.info-value
                |{{publisher.info.label}}
        .margin-top-1
          a.pure-button.pure-button-primary.button-small.margin-right-1-2(data-ng-click="publisher.form = true")
            i.fa.fa-pencil
            |Editar
          a.pure-button.button-small(data-ng-click="showModal()", data-question='Â¿Eliminar Publisher?', data-confirm="deletePublisher(publisher.info.objectId, $index)", confirm-message)
            i.fa.fa-trash 
            |Borrar
