    a.pure-button.button-success.button-small(data-ng-click="saveSerie()", data-ng-class="{'pure-button-disabled': addressForm.$invalid, 'button-success':addressForm.$valid}")
      span(data-ng-if="serieForm.$invalid")
        | Campos Requeridos    
        i.fa.fa-dot-circle-o.error
      span(data-ng-if="serieForm.$valid")
        i.fa.fa-thumbs-o-up
        | Guardar
