#admin-menu(data-ng-include="'app/admin/orders/menu/orders.menu.html'", data-ng-if="!orders.byUser")
#admin-menu(data-ng-include="'app/admin/users/menu/user.menu.html'", data-ng-if="orders.byUser")
.filter-title
  span.publisher-name.
    Ordenes
.shelf
  .inner-shelf
    .shelf-space
      .spinner(data-ng-include="'app/layout/loading/loading.template.html'", data-ng-show="loading")
      #orders
        .query-params
            span.margin-right-1-2
              |Inicio 
            input(type="date" ng-model="orders.startDate")
            span.margin-side-1-2
              |Fin
            input(type="date" ng-model="orders.endDate")
            a.pure-button.pure-button-primary.button-small.margin-left-1-2(data-ng-click="orders.getOrders(orders.startDate, orders.endDate)")
              |Buscar
        .shelf-content
          .shelf-message(ng-if="orders.list.length < 1")
            .subtitle.align-center
              |No existen ordenes registradas.
          .list-item(ng-repeat="item in orders.list", data-ui-sref="admin.order({objectId : item.objectId})")
            .pure-g
              .pure-u-1.pure-u-md-1-5
                .pure-g
                  .pure-u-1-2.pure-u-sm-1-4.pure-u-md-1.text-secondary-black
                    | Referencia
                  .pure-u-1-2.pure-u-sm-1-4.pure-u-md-1.info-value
                    | {{item.referenceId}}
              .pure-u-1.pure-u-md-1-5
                .pure-g
                  .pure-u-1-2.pure-u-sm-1-4.pure-u-md-1.text-secondary-black
                    | Fecha
                  .pure-u-1-2.pure-u-sm-1-4.pure-u-md-1.info-value
                    | {{item.createdAt | date: 'mediumDate'}}
              .pure-u-1.pure-u-md-1-5
                .pure-g
                  .pure-u-1-2.pure-u-sm-1-4.pure-u-md-1.text-secondary-black
                    | Monto
                  .pure-u-1-2.pure-u-sm-1-4.pure-u-md-1.info-value
                    | {{item.amount | currency}}
              .pure-u-1.pure-u-md-1-5
                .pure-g
                  .pure-u-1-2.pure-u-sm-1-4.pure-u-md-1.text-secondary-black
                    | Estado
                  .pure-u-1-2.pure-u-sm-1-4.pure-u-md-1.info-value
                    | {{item.status}}
              .pure-u-1.pure-u-md-1-5
                .pure-g
                  .pure-u-1-2.pure-u-sm-1-4.pure-u-md-1.text-secondary-black
                    | Tipo
                  .pure-u-1-2.pure-u-sm-1-4.pure-u-md-1.info-value
                    | {{item.type}}
        