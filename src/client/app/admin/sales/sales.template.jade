#admin-menu(data-ng-include="'app/admin/orders/menu/orders.menu.html'")
.filter-title
  span.publisher-name.
    Ventas
.shelf
  .inner-shelf
    .shelf-space
      .spinner(data-ng-include="'app/layout/loading/loading.template.html'", data-ng-show="loading")
      #sales
        .margin-bottom-1
          |Inicio 
          input(type="date" ng-model="sales.startDate")
          |Fin
          input(type="date" ng-model="sales.endDate")
          a.pure-button.pure-button-primary.button-small(data-ng-click="sales.getSales(sales.startDate, sales.endDate)")
            |Buscar
        table.info-table
          thead
            tr
              th
                |Total
              th
                |Descuento
              th
                |Monedero
              th
                |Numero de ordenes
              th
                |Numero de articulos
          tbody
            tr
              td
                |{{sales.result.total | currency}}
              td
                |{{sales.result.discount | currency}}
              td
                |{{sales.result.wallet | currency}}
              td
                |{{sales.result.orders.length}}
              td
                |{{sales.result.items}}
.filter-title
  span.publisher-name.
    Articulos
.shelf
  .inner-shelf
    .shelf-space
      .shelf-message(ng-if="sales.list.length < 1")
        .subtitle
          |No exiten articulos en este periodo.
      .spinner(data-ng-include="'app/layout/loading/loading.template.html'", data-ng-show="loading")
      #items
        div(data-ng-if="sales.list.length > 0")
          table.info-table
            thead
              tr
                th
                  |Articulo
                th
                  |Tipo
                th
                  |Cantidad
                th
                  |Precio
                th
                  |Total
            tbody
              tr(data-ng-repeat="item in sales.list | orderBy: 'total':true ")
                td
                  |{{item.item.name}}
                td
                  |{{item.type}}
                td
                  |{{item.quantity}}
                td
                  |{{item.price}}
                td
                  |{{item.total | currency }}


        


        