#admin-menu(data-ng-include="'app/admin/menu/admin.menu.html'")
.filter-title
  span.publisher-name.
    Ventas
.shelf
  .inner-shelf
    .shelf-space
      .spinner(data-ng-include="'app/layout/loading/loading.template.html'", data-ng-show="loading")
      #sales
        |Inicio 
        input(type="date" ng-model="sales.startDate")
        |Fin
        input(type="date" ng-model="sales.endDate")
        a.pure-button.pure-button-primary.button-small(data-ng-click="sales.getSales(sales.startDate, sales.endDate)")
          |Buscar
        h1
          | Total: ${{sales.result.total}}
        h1
          | Discount: ${{sales.result.discount}}
        h1
          | Wallet: ${{sales.result.wallet}}
        h1
          | Numero de ordenes: {{sales.result.orders.length}}
        h1
          | Numero de articulos: {{sales.result.items}}
.filter-title
  span.publisher-name.
    Articulos
.shelf
  .inner-shelf
    .shelf-space
      .shelf-message(ng-if="sales.list.length < 1")
        .subtitle
          |No exiten articulos en este periodo.
      .spinner(data-ng-include="'app/layout/loading/loading.template.html'", data-ng-show="loading")
      #items
      .pure-g
        div(data-ng)
        .pure-u-1.pure-u-md-1-2.pure-u-lg-1-4.pure-u-xl-1-5(data-ng-repeat="item in sales.list | orderBy: 'total':true ")
          .item
            .item-image
              img(alt="", ng-src="{{item.item.cover.url}}")
            .item-info.
              {{item.item.name}}
            .item-info.
              {{item.type}}
            .item-info.
              Cantidad: {{item.quantity}}
            .item-info.
              Precio: {{item.price}}
            .item-info.
              Total de ventas: {{item.total}}


        


        