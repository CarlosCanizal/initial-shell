  body
    div(data-ng-controller="Shell as shell")
      .initial-layer(data-ng-hide="shell.loaded")
        .initial-logo
          img(src="common/images/quimera-white.png")
        .initial-text(data-ng-hide="shell.loaded")
          |Ingresando a la Sociedad.
        .spinner-square(data-ng-hide="shell.loaded")
          .cube1
          .cube2
        
      .opacity-layer(data-ng-show="shell.loading && shell.loaded",)
        div.spinner-circle
          div.dot1
          div.dot2
      .error-layer.align-center(data-ng-if="shell.errorBar",data-ng-show='shell.loaded')
        |{{shell.errorResponse.message}}
      confirm-dialog
      #shell
        #mobile-side-menu(data-ng-include="'app/layout/mobile/side-menu.html'", data-ng-if="shell.sideMenu")
        .pure-g
          .left-pane.pure-u-1.pure-u-md-1-4.pure-u-lg-1-5
            .side-space
              .nav-top(data-ng-include="'app/layout/sidebar.template.html'")
          .right-pane.pure-u-1.pure-u-md-3-4.pure-u-lg-4-5
            #inner-box
            .nav-top(data-ng-include="'app/layout/header.html'")
            div(ui-view)
          #mobile-menu.hidden-lg(data-ng-include="'app/layout/mobile/menu.html'", data-ng-hide="shell.sideMenu || shell.isDashboard || shell.isAdmin")
      .footer
        span(data-ng-bind="shell.labels.website")
        | 
        span(data-ng-bind="shell.labels.year")
        |. 
        span(data-ng-bind="shell.labels.visitOur")
        |         
        a.accent(data-ui-sref='terms', data-ng-bind="shell.labels.termsAndConditions")
        span(data-ng-bind="shell.labels.as")
        a.accent(data-ui-sref='privacy', data-ng-bind="shell.labels.privacyTerms")
        |.  
