    base(href="/")
    title
      |The Comics' Society
    meta(name="viewport", content="width=device-width,initial-scale=1")
    meta(charset="utf-8")
    link(rel="shorcut icon", href="common/images/quimera.ico", type="image/x-icon")
    //build:css
